shell "/usr/local/bin/zsh"
startup_message off
vbell off

bind j focus down
bind l focus right
bind h focus left
bind k focus up
bind t focus top
bind b focus bottom

defscrollback 1000 #size of buffer for copy/scrollback mode

caption always "%{cY}Window:(%n,%t) %{kY} | %{mY}SessionName:%S %{kY} |"
